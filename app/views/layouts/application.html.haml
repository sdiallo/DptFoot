!!!
%html
  %head
    %title DptFoot
    = stylesheet_link_tag 'application', media: 'all'
    %link{ rel:'stylesheet', type:'text/css', href:'//cdn.jsdelivr.net/jquery.slick/1.3.14/slick.css' }
    = csrf_meta_tags
  %body{ data: { 'ng-app' => 'DptFoot'} }
    #main-wrapper
      #nav.navbar.navbar-inverse{ role: 'navigation', data: { 'ng-controller' => 'NavController' } }
        .navbar-header
          %a{ data: { 'ui-sref' => 'home' } }
            DPTFOOT
        .collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li.link{ data: { 'ng-if' => '!user.id', 'ng-click' => 'setPreviousUrl()'  } }
              SE CONNECTER / S'INSCRIRE
            %li.user-infos{ data: { 'ng-if' => 'user.id' } }
              {{user.username}}
            %li.link{ data: { 'ng-if' => 'user.id', 'ui-sref' => 'user({ userId: user.slug })' } }
              Mon profile
            %li.link{ data: { 'ng-if' => 'user.id', 'ng-click' => 'logout()' } }
              Logout
              %span.glyphicon.glyphicon-off
      #view{ data: { 'ui-view' => '' } }

    = javascript_include_tag 'application'
        